{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Railway Integration Roadmap",
  "description": "Schema for railway station integration roadmap data with stations, portions, stages, and milestones",
  "type": "object",
  "properties": {
    "$schema": {
      "type": "string",
      "description": "JSON Schema reference"
    }
  },
  "patternProperties": {
    "^Station [A-Z]$|^Station .+$": {
      "type": "object",
      "description": "A railway station with multiple portions",
      "patternProperties": {
        "^P[0-9]+ - .+$|^.+ - .+$": {
          "type": "object",
          "description": "A portion of work within the station",
          "properties": {
            "stages": {
              "type": "array",
              "description": "List of stages within this portion",
              "items": {
                "type": "object",
                "description": "A stage of work with timeline and milestones",
                "required": ["name", "start", "end", "status", "milestones"],
                "properties": {
                  "name": {
                    "type": "string",
                    "description": "Name of the stage (e.g., Design, Construction, Testing)",
                    "minLength": 1,
                    "examples": [
                      "Design",
                      "Procurement",
                      "Construction",
                      "Installation",
                      "Testing & Commissioning",
                      "Handover"
                    ]
                  },
                  "start": {
                    "type": "string",
                    "description": "Start date in YYYY-MM-DD format",
                    "pattern": "^[0-9]{4}-[0-9]{2}-[0-9]{2}$",
                    "format": "date",
                    "examples": ["2024-01-01", "2025-06-15"]
                  },
                  "end": {
                    "type": "string",
                    "description": "End date in YYYY-MM-DD format",
                    "pattern": "^[0-9]{4}-[0-9]{2}-[0-9]{2}$",
                    "format": "date",
                    "examples": ["2024-12-31", "2025-12-31"]
                  },
                  "status": {
                    "type": "string",
                    "description": "Current status of the stage",
                    "enum": ["completed", "in_progress", "planned", "delayed"],
                    "examples": ["completed", "in_progress", "planned", "delayed"]
                  },
                  "milestones": {
                    "type": "array",
                    "description": "List of milestones within this stage",
                    "items": {
                      "type": "object",
                      "description": "A milestone with date and status",
                      "required": ["name", "date", "status"],
                      "properties": {
                        "name": {
                          "type": "string",
                          "description": "Name of the milestone",
                          "minLength": 1,
                          "examples": [
                            "Design Approval",
                            "Contracts Signed",
                            "Foundation Complete",
                            "Equipment Delivered",
                            "Testing Complete",
                            "Final Handover"
                          ]
                        },
                        "date": {
                          "type": "string",
                          "description": "Milestone date in YYYY-MM-DD format",
                          "pattern": "^[0-9]{4}-[0-9]{2}-[0-9]{2}$",
                          "format": "date",
                          "examples": ["2024-03-15", "2025-06-30"]
                        },
                        "status": {
                          "type": "string",
                          "description": "Current status of the milestone",
                          "enum": ["completed", "in_progress", "planned", "delayed"],
                          "examples": ["completed", "in_progress", "planned"]
                        }
                      },
                      "additionalProperties": false
                    }
                  }
                },
                "additionalProperties": false
              },
              "minItems": 1
            }
          },
          "required": ["stages"],
          "additionalProperties": false
        }
      },
      "additionalProperties": false,
      "minProperties": 1
    }
  },
  "additionalProperties": false,
  "minProperties": 1,
  "examples": [
    {
      "Station A": {
        "P1 - Platform Works": {
          "stages": [
            {
              "name": "Design",
              "start": "2024-01-01",
              "end": "2024-03-31",
              "status": "completed",
              "milestones": [
                {
                  "name": "Design Approval",
                  "date": "2024-03-15",
                  "status": "completed"
                }
              ]
            },
            {
              "name": "Construction",
              "start": "2024-04-01",
              "end": "2024-12-31",
              "status": "in_progress",
              "milestones": []
            }
          ]
        }
      }
    }
  ]
}
